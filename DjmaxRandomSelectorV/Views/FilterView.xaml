<UserControl x:Class="DjmaxRandomSelectorV.Views.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjmaxRandomSelectorV.Views"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="680">
    <Grid>
        <Grid.Resources>
            <Style TargetType="GroupBox">
                <Setter Property="Background" Value="{StaticResource Widget}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource Default}"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource Standard}"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--BUTTON TUNES-->
        <GroupBox Margin="0,0,5,5">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Width" Value="60"/>
                        <Setter Property="Height" Value="60"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="BUTTON TUNES"
                           Grid.Column="1"
                           Grid.ColumnSpan="4"
                           Margin="0,0,0,17"/>
                <ToggleButton Grid.Row="1" Grid.Column="1">
                    
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="2">
                    
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="3">
                    
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="4">
                    
                </ToggleButton>
            </Grid>
        </GroupBox>

        <!--DIFFICULTY-->
        <GroupBox Grid.Column="1" Margin="5,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="DIFFICULTY"
                           Grid.Column="1"
                           Grid.ColumnSpan="4"
                           Margin="0,0,0,10"/>
                <ToggleButton Grid.Row="1" Grid.Column="1"
                              Content="NORMAL" Margin="0,0,9,0"
                              Style="{StaticResource DifficultyButton}">
                    <ToggleButton.Resources>
                        <SolidColorBrush x:Key="Color" Color="{StaticResource Normal}"/>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="2"
                              Content="HARD" Margin="3,0,6,0"
                              Style="{StaticResource DifficultyButton}">
                    <ToggleButton.Resources>
                        <SolidColorBrush x:Key="Color" Color="{StaticResource Hard}"/>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="3"
                              Content="MAXIMUM" Margin="6,0,3,0"
                              Style="{StaticResource DifficultyButton}">
                    <ToggleButton.Resources>
                        <SolidColorBrush x:Key="Color" Color="{StaticResource Maximum}"/>
                    </ToggleButton.Resources>
                </ToggleButton>
                <ToggleButton Grid.Row="1" Grid.Column="4"
                              Content="SC" Margin="9,0,0,0"
                              Style="{StaticResource DifficultyButton}">
                    <ToggleButton.Resources>
                        <SolidColorBrush x:Key="Color" Color="{StaticResource SC}"/>
                    </ToggleButton.Resources>
                </ToggleButton>

                <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4"
                            Orientation="Horizontal" Margin="0, 10">
                    
                </StackPanel>
                <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="MIN" FontSize="13"/>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button/>
                        <TextBlock Text="1" FontSize="13" Grid.Column="1"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Column="2"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="MAX" FontSize="13"/>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button/>
                        <TextBlock Text="15" FontSize="13" Grid.Column="1"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Column="2"/>
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                  Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="CATEGORIES"
                           Grid.Column="1"
                           Margin="0,0,0,10"/>
                <UniformGrid Grid.Row="1" Grid.Column="1"
                             Columns="5">
                    <ToggleButton Content="RESPECT"
                                  Style="{StaticResource Respect}"/>
                    <ToggleButton Content="PORTABLE 1"
                                  Style="{StaticResource Portable1}"/>
                    <ToggleButton Content="PORTABLE 2"
                                  Style="{StaticResource Portable2}"/>
                    <ToggleButton Content="PORTABLE 3"
                                  Style="{StaticResource Portable3}"/>
                    <ToggleButton Content="TRILOGY"
                                  Style="{StaticResource Trilogy}"/>
                    <ToggleButton Content="CLAZZIQUAI"
                                  Style="{StaticResource Clazziquai}"/>
                    <ToggleButton Content="BLACK SQUARE"
                                  Style="{StaticResource BlackSquare}"/>
                    <ToggleButton Content="V EXTENSION"
                                  Style="{StaticResource VExtension}"/>
                    <ToggleButton Content="EMOTIONAL S."
                                  Style="{StaticResource EmotionalS}"/>
                    <ToggleButton Content="TECHNIKA 1"
                                  Style="{StaticResource Technika1}"/>
                    <ToggleButton Content="TECHNIKA 2"
                                  Style="{StaticResource Technika2}"/>
                    <ToggleButton Content="TECHNIKA 3"
                                  Style="{StaticResource Technika3}"/>
                </UniformGrid>
                <StackPanel Grid.Row="2" Grid.Column="1"
                            Background="{StaticResource CategoryUnchecked}"
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="COLLABORATION"
                               FontFamily="{StaticResource Black}" FontSize="10" RenderTransformOrigin="0.492,2.856"/>
                    <UniformGrid>
                        <ToggleButton Content="GUILTY GEAR"
                                      Style="{StaticResource CollabButton}">
                            <ToggleButton.Resources>
                                <SolidColorBrush x:Key="Color" Color="{StaticResource GG}"/>
                            </ToggleButton.Resources>
                        </ToggleButton>
                    </UniformGrid>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
