<Window x:Class="DjmaxRandomSelectorV.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DjmaxRandomSelectorV.Views"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="DJMAX Random Selector V" Width="740" Height="490"
        WindowStyle="None" FontFamily="{StaticResource Lato Black}"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        cal:Message.Attach="[Event Closing] = [Action CloseEvent]">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.987,0.5" EndPoint="1,0.5" SpreadMethod="Repeat">
            <LinearGradientBrush.RelativeTransform>
                <RotateTransform Angle="325" CenterX="0.5" CenterY="0.5"/>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#2D2E2F" Offset="0.4"/>
            <GradientStop Color="#2A2B2C" Offset="0.475"/>
            <GradientStop Color="#2A2B2C" Offset="0.525"/>
            <GradientStop Color="#2D2E2F" Offset="0.6"/>
        </LinearGradientBrush>
    </Window.Background>
    <DockPanel>
        <!-- Top Bar -->
        <Grid Height="40" DockPanel.Dock="Top"
              cal:Message.Attach="[Event MouseDown] = [Action MoveWindow($view)]">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="DJMAX Random Selector V" Foreground="#989999"
                       FontSize="15" VerticalAlignment="Center" Margin="10,0,0,0"/>
                       
            <Button cal:Message.Attach="[Event Click] = [Action MinimizeWindow($view)]"
                    Width="60" Grid.Column="1"
                    Style="{StaticResource WindowButton}">
                <Image Width="16" Height="16"
                       Source="pack://application:,,,/Images/Minimize.png"/>
            </Button>
            <Button cal:Message.Attach="[Event Click] = [Action CloseWindow($view)]"
                    Width="60" Grid.Column="2"
                    Style="{StaticResource WindowButton}">
                <Image Width="16" Height="16"
                       Source="pack://application:,,,/Images/Close.png"/>
            </Button>
        </Grid>
        <!-- Menu Bar -->
        <Grid Height="40" DockPanel.Dock="Top"
                    Background="{StaticResource Nav}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="FILTER" Foreground="{StaticResource Highlight}"
                       FontFamily="{StaticResource Lato Light}" FontSize="23"
                       Grid.Column="1" VerticalAlignment="Center"/>
            <RadioButton cal:Message.Attach="[Event Checked] = [Action LoadFilterTab]"
                          Grid.Column="3" Style="{StaticResource TabButton}"
                          Content="FILTER" IsChecked="True"/>
            <RadioButton cal:Message.Attach="[Event Checked] = [Action LoadHistoryTab]"
                          Grid.Column="4" Style="{StaticResource TabButton}"
                          Content="HISTORY" Margin="30,0,0,0"/>
        </Grid>
        <!-- Bottom Bar -->
        <Grid Height="50" DockPanel.Dock="Bottom" Background="{StaticResource Nav}">

            <TextBlock Text="Press F7 to Start Random Selector" Foreground="{StaticResource Default}"
                       FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource UtilityButton}"
                        Margin="10,0,30,0">
                    <Image Source="pack://application:,,,/Images/setting.png"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Center -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <TabControl Grid.Row="1" Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0">
                <TabItem Visibility="Collapsed" IsSelected="{Binding IsFilterTabSelected}">
                    <ContentControl x:Name="FilterViewModel"/>
                </TabItem>
                <TabItem Visibility="Collapsed" IsSelected="{Binding IsHistoryTabSelected}">
                    <ContentControl x:Name="HistoryViewModel"/>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
